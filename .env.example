# Application Settings
APP_NAME=Dandle Backend API
APP_VERSION=1.0.0
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/dandel
REDIS_URL=redis://localhost:6379/0

# JWT Settings (REQUIRED - GENERATE SECURE KEY FOR PRODUCTION!)
JWT_SECRET=your-super-secret-key-here-must-be-changed
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# OAuth Settings
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# CORS Settings
CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]

# File Upload Settings
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/heic","image/webp"]

# Face Recognition Settings
FACE_SIMILARITY_THRESHOLD=0.8
FACE_CONFIDENCE_THRESHOLD=0.8

# Pagination Settings
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100